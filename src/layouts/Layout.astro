---
import GradientOverlay from "../components/GradientOverlay.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<title>Comparsa La Union de la Paz 2026</title>
		<meta
			name="description"
			content="Comparsa La Union de la Paz 2026 - Algo grande se acerca!"
		/>
		<meta name="keywords" content="Comparsa La Union de la Paz 2026" />
		<meta name="author" content="Jose I Toledano M" />
	</head>
	<body>
		<div id="background-mask" class="min-h-screen w-full">
			<GradientOverlay />
			<div class="relative z-2 flex flex-col min-h-screen">
				<slot />
			</div>
		</div>
	</body>
</html>

<style is:global>
	@import "tailwindcss";
	@import "@midudev/tailwind-animations";
	@font-face {
		font-family: "Rampart One";
		src: url("/fonts/rampartone-regular.woff2") format("woff2");
		font-weight: bold;
		font-style: normal;
		font-display: swap;
	}

	body {
		font-family: "Rampart One", sans-serif;
	}
</style>
<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	#background-mask {
		position: relative;
		min-height: 100vh;
		width: 100%;
		overflow: hidden;
	}

	#background-mask::before {
		content: "";
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-image: url("/background.png");
		background-size: cover;
		background-position: top;
		filter: blur(10px);
		z-index: -1;
		transform: scale(1.1); /* Prevents white edges from blur */
	}
</style>
